<%- include("partials/header") %>
    <div class="container show">
        <div class="jumbotron">
            <h1 class="text-center">Your Image</h1>
            <div class="card">
                <img class="card-img-top" src="<%=url%>" alt="Failed to load image">
                <div class="card-body">
                    <h3 class="card-title">Labels :</h3>
                    <%for (var i = 0; i < response.rawData.outputs[0].data.concepts.length; i++) {%>
                        <span class="labels">
                            <%=response.rawData.outputs[0].data.concepts[i].name%>
                        </span>
                        <%}%>
                </div>
            </div>

        </div>
        <h1 class="text-center my-3">Related Images</h1>
        <div class="row">
            <%for (var i = 0;imgdata.total >= 12 ? i < 12: i < imgdata.total; i++) {%>
                <div class="col-lg-4 col-md-6 col-sm-6 col-xs-6">
                    <div class="card mt-4 search">
                        <img src="<%=imgdata.hits[i].webformatURL%>" alt="" class="card-img-top myimage">
                        <div class="card-body">
                            <p class="text-center">
                                <a href="<%=imgdata.hits[i].largeImageURL%>" class="btn btn-outline-success">View full image</a>
                            </p>
                        </div>
                    </div>


                </div>

                <%}%>
        </div>







        <%if(imgdata.total==0){%>
            <h3>Sorry no related images found</h3>
            <%}%>
                <p class="mt-4 text-center">
                    <a href="/form" class="btn btn-lg btn-outline-success">Try again</a>
                </p>
